                    <Tooltip text="Ingrese su código postal, 5 digitos." />
                </tooltip>
            </TextField>

            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10">
                <Label text="Activo:" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                <CheckBox fx:id="activeCheckBox" onAction="#handleActiveCheckBoxChange" selected="true" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="10" />
                <HBox fx:id="warningbox" alignment="CENTER_LEFT" spacing="10" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="10">
                    <ImageView fitHeight="40" fitWidth="40">
                        <image>
                            <Image url="@/resources/iconos/warning.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="MensajeWarning" style="-fx-text-fill: #FFFF55;" text="No podrá hacer Login" />
                </HBox>
            </HBox>
            <Button fx:id="btnRegistrar" maxWidth="Infinity" onAction="#handleButtonRegistrar" text="Registrar" GridPane.columnSpan="2" GridPane.rowIndex="13" />
            <Button fx:id="btnCancelar" maxWidth="Infinity" text="Cancelar" GridPane.columnSpan="2" GridPane.rowIndex="14" />

            <ImageView fx:id="errorImageName" fitHeight="28.0" fitWidth="28.0" nodeOrientation="INHERIT" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <image>
                    <Image url="@../resources/iconos/error.png" />
                </image>
            </ImageView>
            <ImageView fx:id="errorImageSurname1" fitHeight="28.0" fitWidth="28.0" nodeOrientation="INHERIT" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2">
