            <TextField fx:id="streetField" promptText="Dirección" GridPane.columnIndex="1" GridPane.rowIndex="7">
                <tooltip>
                    <Tooltip text="Ingrese su dirección" />
                </tooltip>
            </TextField>

            <ImageView fitHeight="40" fitWidth="40" GridPane.rowIndex="8">
                <image>
                    <Image url="@../resources/iconos/ciudad.png" />
                </image>
            </ImageView>
            <TextField fx:id="cityField" promptText="Ciudad" GridPane.columnIndex="1" GridPane.rowIndex="8">
