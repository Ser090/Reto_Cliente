                </graphic>
            </Button>

            <ImageView fitHeight="40" fitWidth="40" GridPane.rowIndex="6">
                <image>
                    <Image url="@../resources/iconos/contraseñaconf.png" />
                </image>
            </ImageView>
            <PasswordField fx:id="confirmpasswordField" promptText="Confirmar contraseña" GridPane.columnIndex="1" GridPane.rowIndex="6">
