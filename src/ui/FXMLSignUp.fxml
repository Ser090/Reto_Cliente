            <!-- Botón con imagen del ojo -->
            <Button fx:id="toggleVisibilityButton2" translateX="135" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.halignment="RIGHT" onAction="#handleTogglePasswordVisibility" style="-fx-background-color: transparent;">
