            </ImageView>
            <TextField fx:id="emailField" promptText="Correo Electrónico" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <tooltip>
                    <Tooltip text="Ingrese su correo electrónico, formato xxxxx@yyyy.zzz" />
                </tooltip>
            </TextField>

            <ImageView fitHeight="40" fitWidth="40" GridPane.rowIndex="5">
                <image>
                    <Image url="@../resources/iconos/contraseña.png" />
                </image>
            </ImageView>
            <PasswordField fx:id="passwordField" promptText="Contraseña" GridPane.columnIndex="1" GridPane.rowIndex="5">
