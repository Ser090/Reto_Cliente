            </PasswordField>
            <!-- Botón con imagen del ojo -->
            <Button fx:id="toggleVisibilityButton1" translateX="135" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="RIGHT" onAction="#handleTogglePasswordVisibility" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView  fx:id="eyeIcon1" fitHeight="30" fitWidth="30" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../resources/iconos/visualizar.png" />
