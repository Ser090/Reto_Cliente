<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="passwordChangePane" prefHeight="400.0" prefWidth="600.0" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FXMLPasswordChangeController">
    <children>
        <!-- Título -->
        <Text layoutX="250.0" layoutY="50.0" text="Cambiar Contraseña" />

        <!-- Campo Correo -->
        <TextField fx:id="emailField" layoutX="100.0" layoutY="74.0" promptText="Introduce tu correo electrónico" />
        
        
        <!-- Campo Nueva Contraseña -->
        <PasswordField fx:id="oldPasswordField" layoutX="100.0" layoutY="144.0" promptText="Introduce tu antigua contraseña" />
        
        
        <!-- Campo Nueva Contraseña -->
        <PasswordField fx:id="newPasswordField" layoutX="100.0" layoutY="144.0" promptText="Introduce nueva contraseña" />

        <!-- Campo Confirmar Contraseña -->
        <PasswordField fx:id="confirmPasswordField" layoutX="100.0" layoutY="221.0" promptText="Confirmar nueva contraseña" />

        <!-- Botón Cambiar Contraseña -->
        <Button layoutX="138.0" layoutY="312.0" onAction="#handleButtonChangePassword" text="Cambiar Contraseña" />
    </children>
</AnchorPane>
